#!/usr/bin/env perl

use Math::BaseCnv;

BEGIN {
    $base = shift // die "USAGE: 2base BASE [number].\n";
    *arg = @ARGV ? \&CORE::shift : \&CORE::readline;
}

while (defined($_ = arg)) {
    chomp;
    $_ .= /_/   ? ''
        : /^0b/ ? '_2'
        : /^0x/ ? "_16"
        : /^0/  ? '_8'
        :         '_10'
        ;
    print cnv((split /_/) => $base), "\n";
}

